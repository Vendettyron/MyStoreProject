{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "baseUrl": ".",
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}